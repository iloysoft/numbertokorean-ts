{
  "name": "numbertokorean-ts",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && esbuild ./dist/numbertokorean.js --bundle --format=esm --minify --platform=browser --target=chrome58,firefox57,safari11,edge16 --outfile=./dist/numbertokorean.min.js",
    "build:watch": "tsc -w",
    "coverage": "npm run test -- --coverage",
    "test": "jest",
    "lint": "gts lint ./src/",
    "clean": "gts clean",
    "compile": "npm run build",
    "fix": "gts fix ./src/",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "author": "iloysoft LC.",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "esbuild": "0.24.0",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
